{
  "manifest_version": 3,
  "name": "Ayat",
  "version": "1.0",
  "description": "Daily Ayat â€” gentle reminders with verses from the Holy Quran on your browsing journey.",
  "icons": {
    "16": "assets/ayat-extension-logo.png",
    "32": "assets/ayat-extension-logo.png",
    "48": "assets/ayat-extension-logo.png",
    "128": "assets/ayat-extension-logo.png"
  },
  "action": {
    "default_title": "Ayat",
    "default_icon": {
      "16": "assets/ayat-extension-logo.png",
      "32": "assets/ayat-extension-logo.png",
      "48": "assets/ayat-extension-logo.png"
    },
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/content.js"],
      "css": ["css/content.css"]
    }
  ],
  "permissions": ["tabs"],
  "host_permissions": [
    "https://api.alquran.cloud/*"
  ]
}
